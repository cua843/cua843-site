---
interface Props {
    url: string;
    image: string;
    title: string;
    body: string;
    platform: string;
    stack: string;
}

const { url, image, title, body , platform, stack} = Astro.props;
---

<li class="card">
    <a class="card__link" href={url}>
        <div class="center">
            <img
                class="card__img"
                width="226"
                height="127"
                src={image}
                alt="ProjectImage"
            />
        </div>
        <h3 class="card__title">
            {title}
        </h3>
        <span class="badge">
            {platform}
        </span><br>
        <span class="badge">
            {stack}
        </span>
        <p class="card__txt">
            {body}
        </p>
    </a>
</li>
